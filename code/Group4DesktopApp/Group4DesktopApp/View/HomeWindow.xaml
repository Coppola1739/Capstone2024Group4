<Window x:Class="Group4DesktopApp.View.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Group4DesktopApp.View" xmlns:viewmodel="clr-namespace:Group4DesktopApp.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:HomeViewModel}"
        mc:Ignorable="d"
        Title="HomeWindow" Height="800" Width="1190" WindowStartupLocation="CenterScreen" SizeToContent="Width">
    <Grid>

        <ListBox x:Name="SourcesList" ItemsSource="{Binding SourceDataProperty, Mode=TwoWay, NotifyOnSourceUpdated=True, UpdateSourceTrigger=PropertyChanged}" d:ItemsSource="{d:SampleData ItemCount=5}" Width="345" Margin="61,94,784,131"/>
        <Button x:Name="btnViewSource" Content="View Source" Width="101" Height="25" Margin="183,681,906,78" Click="btnViewSource_Click"/>

        <Label x:Name="lblWelcome" Content="Welcome" HorizontalAlignment="Left" Margin="35,26,0,0" VerticalAlignment="Top" Width="192" FontWeight="Bold" FontSize="16"/>
        <ComboBox HorizontalAlignment="Left" Margin="570,118,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="SourceType" HorizontalAlignment="Left" Margin="570,92,0,0" VerticalAlignment="Top"/>
        <Button Content="Upload a Source" HorizontalAlignment="Left" Margin="575,154,0,0" VerticalAlignment="Top" Width="110" Height="26"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="910,129,0,0" VerticalAlignment="Top" Width="0"/>

    </Grid>
</Window>
